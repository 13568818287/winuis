<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>        
        <StackPanel Orientation="Vertical">
            <TextBlock Text="多线程测试"/>
            <Button Content="ADD" Width="100" Height="28" x:Name="btn1" Click="btn1_Click" VerticalAlignment="Top" Margin="0,10"/>
            <!--<TextBlock x:Name="infotxt" Width="300" Height="200" Background="AliceBlue"  Margin="0,10"/>-->
            <TextBox x:Name="msg1" Height="30" BorderThickness="1" BorderBrush="Red" Text="好好好"/>
        </StackPanel>

        <RichTextBox x:Name="richbox" Grid.Column="1">
            <FlowDocument LineHeight="8">
                
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
