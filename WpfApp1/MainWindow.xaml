<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button x:Name="btn1" Content="Hello" Width="100" Height="40" Click="btn1_Click" Margin="10,0"/>
            <TextBox x:Name="tboxInfo" Text="Hello" Width="280" Height="40" TextWrapping="Wrap" />
        </StackPanel>
        <TextBlock x:Name="tbText1" Text="Hello world,Hello" FontSize="20" Grid.Row="1"/>
       
    </Grid>
</Window>
